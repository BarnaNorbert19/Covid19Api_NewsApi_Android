<?xml version="1.0" encoding="utf-8" ?> 
        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_above="@+id/navigation"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/hun_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
        <TextView
        android:id="@+id/text_view_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:textSize="@dimen/icon_text"
        android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_lungs"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/lungs"
            android:layout_toRightOf="@+id/text_view_id"
            android:contentDescription="@string/title_aktiv"/>
         </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
        android:id="@+id/deaths_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_below="@+id/text_view_id"
        android:layout_marginTop="@dimen/icon_margin"
            android:textSize="@dimen/icon_text"
            android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_deaths"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/death"
            android:layout_toRightOf="@+id/deaths_id"
            android:layout_below="@+id/img_lungs"
            android:layout_marginTop="@dimen/icon_margin"
            android:contentDescription="@string/title_deaths"/>
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                        <TextView
        android:id="@+id/recovered_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_below="@+id/deaths_id"
        android:layout_marginTop="@dimen/icon_margin"
        android:textSize="@dimen/icon_text"
        android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_recovered"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/recovered"
            android:layout_toRightOf="@+id/recovered_id"
            android:layout_below="@+id/img_deaths"
            android:layout_marginTop="@dimen/icon_margin"
            android:contentDescription="@string/title_felepultek"/>
        </LinearLayout>
            </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Orsz_Magyar"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/Flag_HUN"
            android:contentDescription="@string/zaszlo_HUN"/>
            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/vonal_size"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/global_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
        <TextView
        android:id="@+id/text_view_global_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
            android:textSize="@dimen/icon_text"
            android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_lungs_global_id"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/lungs"
            android:layout_toRightOf="@+id/text_view_id"
            android:contentDescription="@string/title_aktiv"/>
                </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
        android:id="@+id/deaths_global_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_below="@+id/text_view_id"
        android:layout_marginTop="@dimen/icon_margin"
            android:textSize="@dimen/icon_text"
            android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_global_deaths"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/death"
            android:layout_toRightOf="@+id/deaths_id"
            android:layout_below="@+id/img_lungs"
            android:layout_marginTop="@dimen/icon_margin"
            android:contentDescription="@string/title_deaths"/>
        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                        <TextView
        android:id="@+id/recovered_global_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_below="@+id/deaths_id"
        android:layout_marginTop="@dimen/icon_margin"
        android:textSize="@dimen/icon_text"
        android:layout_marginRight="@dimen/covid_info_textsize"/>

        <ImageView
            android:id="@+id/img_global_recovered"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/recovered"
            android:layout_toRightOf="@+id/recovered_id"
            android:layout_below="@+id/img_deaths"
            android:layout_marginTop="@dimen/icon_margin"
            android:contentDescription="@string/title_felepultek"/>
                </LinearLayout>
        </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glb_zaszlo"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/Global"
            android:contentDescription="@string/glb_zaszlo"/>
            </LinearLayout>
        </LinearLayout>